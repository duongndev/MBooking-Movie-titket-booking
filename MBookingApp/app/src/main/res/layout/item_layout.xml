<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:padding="16dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_coming_soon"
        android:layout_width="173dp"
        android:layout_height="244dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/img_poster_movie_coming_soon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/avengers_infinity_war_poster" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txt_title_movie_coming_soon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_below="@id/card_view_coming_soon"
        android:text="Avengers - Infinity War"
        android:textColor="@color/my_light_primary"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_rating_movie_now_playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_movie_coming_soon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_movie"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/txt_generic_movie_coming_soon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Action, Adventure, Sci-Fi"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>